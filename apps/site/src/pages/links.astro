---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Links" description="Todos os links do Consciência Café - Cafeteria de especialidade, livraria e coworking em Foz do Iguaçu">
  <main class="min-h-screen bg-black flex flex-col items-center px-4 py-12">
    <!-- Logo -->
    <img
      src="/images/LOGOBRANCO.png"
      alt="Consciência Café"
      class="h-24 mb-4"
    />

    <!-- Subtítulo -->
    <p class="text-gray-400 text-sm mb-8">Cafeteria • Torrefação • Livraria • Coworking</p>

    <!-- Links -->
    <div class="w-full max-w-sm space-y-3">
      <!-- WhatsApp -->
      <a
        href="https://wa.me/5545991025102?text=Olá!"
        target="_blank"
        rel="noopener noreferrer"
        class="link-button group"
      >
        <svg class="w-5 h-5 text-[#25D366]" fill="currentColor" viewBox="0 0 24 24">
          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
        </svg>
        <span>WhatsApp</span>
      </a>

      <!-- Google Maps -->
      <a
        href="https://maps.google.com/?q=Consciência+Café+Foz+do+Iguaçu"
        target="_blank"
        rel="noopener noreferrer"
        class="link-button group"
      >
        <svg class="w-5 h-5 text-[#4285F4]" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
        </svg>
        <span>Como Chegar</span>
      </a>

      <!-- Cardápio -->
      <a
        href="/cardapio/"
        class="link-button group"
      >
        <svg class="w-5 h-5 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
        </svg>
        <span>Cardápio</span>
      </a>

      <!-- iFood -->
      <a
        href="https://www.ifood.com.br/delivery/foz-do-iguacu-pr/consciencia-cafe-panorama/9324116a-fbce-484d-921b-bee8ec607474?utm_medium=share"
        target="_blank"
        rel="noopener noreferrer"
        class="link-button group"
      >
        <svg class="w-5 h-5 text-[#EA1D2C]" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
        </svg>
        <span>Peça pelo iFood</span>
      </a>

      <!-- YouTube -->
      <a
        href="https://www.youtube.com/@ConscienciaCafe"
        target="_blank"
        rel="noopener noreferrer"
        class="link-button group"
      >
        <svg class="w-5 h-5 text-[#FF0000]" fill="currentColor" viewBox="0 0 24 24">
          <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
        </svg>
        <span>YouTube</span>
      </a>

    </div>

    <!-- Rodapé -->
    <p class="text-gray-600 text-xs mt-12">Foz do Iguaçu, PR</p>
  </main>
</BaseLayout>

<style>
  .link-button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    width: 100%;
    padding: 1rem 1.5rem;
    background: transparent;
    border: 1px solid #374151;
    border-radius: 0.75rem;
    color: white;
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .link-button:hover {
    border-color: #FF4611;
    background: rgba(255, 70, 17, 0.1);
    transform: scale(1.02);
  }

  .link-button:active {
    transform: scale(0.98);
  }
</style>
