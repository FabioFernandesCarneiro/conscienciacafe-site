---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout
  title="Contato"
  description="Entre em contato com o Consciência Café. Endereço, telefone, horários de funcionamento e como chegar."
>
  <Header />

  <main class="pt-20">
    <!-- Hero Section -->
    <section class="relative py-24 md:py-32 bg-primary overflow-hidden">
      <div class="absolute inset-0">
        <img
          src="/images/DSC_0300.jpg"
          alt="Contato"
          class="w-full h-full object-cover opacity-50"
        />
      </div>
      <div class="container-custom section-padding !py-0 relative z-10">
        <div class="max-w-3xl">
          <span class="text-accent text-sm font-semibold tracking-widest uppercase">Fale Conosco</span>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif text-white mt-4 mb-6">
            Contato
          </h1>
          <p class="text-xl text-gray-300">
            Estamos prontos para recebê-lo. Entre em contato ou venha nos visitar.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Info Section -->
    <section class="section-padding bg-white">
      <div class="container-custom">
        <div class="grid md:grid-cols-2 gap-12 lg:gap-20">
          <!-- Contact Information -->
          <div>
            <span class="text-accent text-sm font-semibold tracking-widest uppercase">Informações</span>
            <h2 class="text-3xl md:text-4xl font-serif mt-2 mb-8">
              Como nos encontrar
            </h2>

            <div class="space-y-6">
              <!-- Address -->
              <div class="flex gap-4">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </div>
                </div>
                <div>
                  <h3 class="font-semibold mb-1">Endereço</h3>
                  <p class="text-gray">
                    Av. Felipe Wandscheer, 3877 loja 03<br/>
                    Jardim Panorama<br/>
                    Foz do Iguaçu - PR
                  </p>
                  <a
                    href="https://maps.google.com/?q=Consciência+Café+Foz+do+Iguaçu"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-accent text-sm font-medium hover:underline mt-2 inline-block"
                  >
                    Ver no Google Maps →
                  </a>
                </div>
              </div>

              <!-- Phone -->
              <div class="flex gap-4">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  </div>
                </div>
                <div>
                  <h3 class="font-semibold mb-1">WhatsApp</h3>
                  <a
                    href="https://wa.me/5545991025102"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-gray hover:text-accent transition-colors"
                  >
                    +55 45 99102-5102
                  </a>
                </div>
              </div>

              <!-- Email -->
              <div class="flex gap-4">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                </div>
                <div>
                  <h3 class="font-semibold mb-1">E-mail</h3>
                  <a
                    href="mailto:contato@conscienciacafe.com.br"
                    class="text-gray hover:text-accent transition-colors"
                  >
                    contato@conscienciacafe.com.br
                  </a>
                </div>
              </div>

              <!-- Hours -->
              <div class="flex gap-4">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-accent/10 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                </div>
                <div>
                  <h3 class="font-semibold mb-1">Horários</h3>
                  <p class="text-gray">
                    Segunda a Sexta: 12h às 19h<br/>
                    Sábado e Domingo: 9h às 16h
                  </p>
                  <p class="text-accent text-sm mt-2">Funcionamos nos feriados!</p>
                </div>
              </div>
            </div>

            <!-- CTA Button -->
            <a
              href="https://wa.me/5545991025102?text=Olá! Gostaria de mais informações"
              target="_blank"
              rel="noopener noreferrer"
              class="btn-primary mt-8 inline-flex items-center gap-2"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              Falar pelo WhatsApp
            </a>
          </div>

          <!-- Map -->
          <div class="bg-gray-light rounded-2xl overflow-hidden min-h-[400px]">
            <iframe
              src="https://maps.google.com/maps?q=Consci%C3%AAncia+Caf%C3%A9+Foz+do+Igua%C3%A7u&t=&z=17&ie=UTF8&iwloc=&output=embed"
              width="100%"
              height="100%"
              style="border:0; min-height: 400px;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
              title="Localização do Consciência Café"
            ></iframe>
          </div>
        </div>
      </div>
    </section>

    <!-- Social Media Section -->
    <section class="section-padding bg-gray-light">
      <div class="container-custom text-center">
        <span class="text-accent text-sm font-semibold tracking-widest uppercase">Redes Sociais</span>
        <h2 class="text-3xl md:text-4xl font-serif mt-2 mb-8">
          Siga-nos nas redes
        </h2>

        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="https://instagram.com/conscienciacafefoz"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-3 bg-white px-6 py-4 rounded-xl hover:shadow-lg transition-shadow"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="text-accent">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
            <span class="font-medium">@conscienciacafefoz</span>
          </a>

          <a
            href="https://facebook.com/conscienciacafe"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-3 bg-white px-6 py-4 rounded-xl hover:shadow-lg transition-shadow"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="text-accent">
              <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"/>
            </svg>
            <span class="font-medium">Facebook</span>
          </a>

          <a
            href="https://linkedin.com/company/consciencia-cafe"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-3 bg-white px-6 py-4 rounded-xl hover:shadow-lg transition-shadow"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="text-accent">
              <path d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.968v16h4.969v-8.399c0-4.67 6.029-5.052 6.029 0v8.399h4.988v-10.131c0-7.88-8.922-7.593-11.018-3.714v-2.155z"/>
            </svg>
            <span class="font-medium">LinkedIn</span>
          </a>

          <a
            href="https://youtube.com/@ConscienciaCafe"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-3 bg-white px-6 py-4 rounded-xl hover:shadow-lg transition-shadow"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="text-accent">
              <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z"/>
            </svg>
            <span class="font-medium">YouTube</span>
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
