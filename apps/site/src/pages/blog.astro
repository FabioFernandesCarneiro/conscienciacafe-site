---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<BaseLayout
  title="Blog"
  description="Artigos sobre café especial, técnicas de preparo, cultura do café e muito mais. Conteúdo exclusivo do Consciência Café."
>
  <Header />

  <main class="pt-20">
    <!-- Hero Section -->
    <section class="relative py-24 md:py-32 bg-primary overflow-hidden">
      <div class="absolute inset-0">
        <img
          src="/images/DSC_0493.jpg"
          alt="Blog"
          class="w-full h-full object-cover opacity-50"
        />
      </div>
      <div class="container-custom section-padding !py-0 relative z-10">
        <div class="max-w-3xl">
          <span class="text-accent text-sm font-semibold tracking-widest uppercase">Nosso Blog</span>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-serif text-white mt-4 mb-6">
            Blog
          </h1>
          <p class="text-xl text-gray-300">
            Artigos, curiosidades e tudo sobre o universo do café especial.
          </p>
        </div>
      </div>
    </section>

    <!-- Posts Grid -->
    <section class="section-padding bg-white">
      <div class="container-custom">
        {sortedPosts.length > 0 ? (
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {sortedPosts.map((post) => (
              <article class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-shadow duration-300 group">
                <a href={`/${post.slug}/`} class="block">
                  <div class="aspect-video bg-gray-light overflow-hidden">
                    {post.data.image ? (
                      <img
                        src={post.data.image}
                        alt={post.data.title}
                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      />
                    ) : (
                      <div class="w-full h-full flex items-center justify-center bg-primary/10">
                        <svg class="w-12 h-12 text-accent/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                        </svg>
                      </div>
                    )}
                  </div>
                  <div class="p-6">
                    <time class="text-sm text-gray" datetime={post.data.date}>
                      {new Date(post.data.date).toLocaleDateString('pt-BR', {
                        day: '2-digit',
                        month: 'long',
                        year: 'numeric'
                      })}
                    </time>
                    <h2 class="font-serif text-xl mt-2 mb-3 group-hover:text-accent transition-colors">
                      {post.data.title}
                    </h2>
                    <p class="text-gray text-sm line-clamp-3">
                      {post.data.description}
                    </p>
                    <span class="inline-flex items-center gap-2 text-accent font-medium text-sm mt-4">
                      Ler mais
                      <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </span>
                  </div>
                </a>
              </article>
            ))}
          </div>
        ) : (
          <div class="text-center py-16">
            <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
            </svg>
            <p class="text-gray text-lg">Nenhum artigo publicado ainda.</p>
            <p class="text-gray-400 mt-2">Em breve teremos novidades!</p>
          </div>
        )}
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
